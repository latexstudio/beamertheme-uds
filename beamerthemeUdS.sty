%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

\usecolortheme{UdS} 
\usefonttheme{UdS}
\useoutertheme{UdS}
\useinnertheme{UdS}


\endinput

