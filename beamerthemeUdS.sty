% Outer theme: udsicon
\DeclareOptionBeamer{udsicon}{
  \PassOptionsToPackage{udsicon=#1}{beamerouterthemeUdS}
}
\ExecuteOptionsBeamer{udsicon=true}

% Outer theme: footline
\DeclareOptionBeamer{footline}{
  \PassOptionsToPackage{footline=#1}{beamerouterthemeUdS}
}
\ExecuteOptionsBeamer{footline=true}

% Outer theme: footlinetext
\DeclareOptionBeamer{footlinetext}{
  \PassOptionsToPackage{footlinetext={#1}}{beamerouterthemeUdS}
}
\ExecuteOptionsBeamer{footlinetext=}

% Outer theme: titlepagehead
\DeclareOptionBeamer{titlepagehead}{
  \PassOptionsToPackage{titlepagehead=#1}{beamerouterthemeUdS}
}
\ExecuteOptionsBeamer{titlepagehead=true}

% Outer theme: titlepagepic
\DeclareOptionBeamer{titlepagepic}{
  \PassOptionsToPackage{titlepagepic=#1}{beamerouterthemeUdS}
}
\ExecuteOptionsBeamer{titlepagepic=true}

% ProcessOptions
\ProcessOptionsBeamer

